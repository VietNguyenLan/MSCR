@model Project.EF.user
@{
    ViewBag.Title = "UserDetail";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/fonts/Font(css,js)/COModal.css" rel="stylesheet" />

</head>
<body>
    <section class="jumbotron text-center">
        <div class="container">
            <h1 style="margin-top:100px;font-weight:800;">Thông tin cá nhân</h1>
        </div>
    </section>

    <div class="container bootstrap snippet">
        <div class="row">
            <div class="col-sm-3">
                <!--left col-->


                <div class="text-center">
                    <img src="@Url.Content(Model.avt_img)" class="img-thumbnail" alt="avatar">
                </div><br>
            </div><!--/col-3-->
            <div class="col-sm-9">
                <br />
                <div class="form-group">
                    <div class="col-xs-6">
                        <label style="font-weight:600;font-size:25px;">Tên</label>
                        <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.name)" disabled />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6">
                        <label style="font-weight:600;font-size:25px;">Địa chỉ</label>
                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.address)" disabled />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6">
                        <label style="font-weight:600;font-size:25px;">Số điện thoại</label>
                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.phone_num)" disabled />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6">
                        <label style="font-weight:600;font-size:25px;">Email</label>
                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.email)" disabled />
                    </div>
                </div>
                <div class="form-group" style="display:flex;">
                    <div class="col-xs-12" style="margin-right:20px;">
                        <br>
                        <button class="btn btn-lg btn-info" type="submit" onclick="location.href='/UserAA/Index'">Sửa thông tin cá nhân <i class="fa fa-edit"></i></button>
                    </div>
                    <div class="col-xs-12">
                        <br>
                        <button class="btn btn-lg btn-info" type="submit" onclick="location.href='/ChangePassword/Index'">Đổi mật khẩu <i class="fa fa-edit"></i></button>
                    </div>
                </div>
            </div><!--/col-9-->
        </div><!--/row-->
    </div><br /><br />
</body>
</html>