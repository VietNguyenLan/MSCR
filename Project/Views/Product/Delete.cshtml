@model Project.EF.product

<h3>Bạn có muốn xóa món ăn này không?</h3>
<div>
    <h4>Món Ăn</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Món Ăn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
        <br>
        <dt>
            Mô Tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>
        <br>
        <dt>
            Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>
        <br>
        <dt>
           Ảnh

        </dt>

        <dd>
            <img src="@Url.Content(Model.img)" alt="Sample Image" width="300px" />
        </dd>
        <br>
        <dt>
            ComBo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isCombo)
        </dd>
        <br>
        <dt>
            @Html.DisplayNameFor(model => model.disable)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.disable)
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
           <button> @Html.ActionLink("Quay Lại", "Index")</button>
        </div>
    }
</div>
