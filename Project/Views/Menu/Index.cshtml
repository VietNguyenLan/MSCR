@model IEnumerable<Project.EF.menu>
<h4>Danh Sách Menu</h4>
<button>
    @Html.ActionLink("Tạo Mới", "Create")
</button>
<button>@Html.ActionLink("Thêm món ăn cho Menu", "CreateMenuDetail")</button>
<br><br>
<link href="~/Style/Style.css" rel="stylesheet" />
<table class="table table-striped" id="t01">
   
    <tr>
        <th>
            Ngày Tạo
        </th>
        <th>
            Tên Menu
        </th>
        <th>
            Người Tạo
        </th>
        <th>
            Mô tả
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.date_create)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menu_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>

            <button>@Html.ActionLink("Chi Tiết", "Details", new { id = item.id })</button>
           
        </td>
    </tr>
}

</table>
