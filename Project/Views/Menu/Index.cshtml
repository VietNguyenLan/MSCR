@model IEnumerable<Project.EF.menu>
<h4>Danh Sách Menu</h4>
<button>
    @Html.ActionLink("Tạo Mới", "Create")
</button>
<br><br>
<link href="~/Style/Style.css" rel="stylesheet" />
<table class="table table-striped" id="t01">
   
    <tr>
        <th>
            Ngày Tạo
        </th>
        <th>
            Tên Menu
        </th>
        <th>
            Người Tạo
        </th>
        <th>
        
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.date_create)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menu_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.name)
        </td>
        <td>
            <button>@Html.ActionLink("Sửa", "Edit", new { id=item.id })</button>
            <button>@Html.ActionLink("Chi Tiết", "Details", new { id = item.id })</button>
            <button>@Html.ActionLink("Xóa", "Delete", new { id = item.id })</button>
        </td>
    </tr>
}

</table>
