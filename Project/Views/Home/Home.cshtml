
@{
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
@model IEnumerable<Project.EF.product>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Tasty - Free Bootstrap 4 Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">

    <link href="~/fonts/Font(css,js)/css/open-iconic-bootstrap.min.css" rel="stylesheet" />
    <link href="~/fonts/Font(css,js)/css/animate.css" rel="stylesheet" />

    <link href="~/fonts/Font(css,js)/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/fonts/Font(css,js)/css/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/fonts/Font(css,js)/css/magnific-popup.css" rel="stylesheet" />

    <link href="~/fonts/Font(css,js)/css/aos.css" rel="stylesheet" />

    <link href="~/fonts/Font(css,js)/css/ionicons.min.css" rel="stylesheet" />

    <link href="~/fonts/Font(css,js)/css/flaticon.css" rel="stylesheet" />
    <link href="~/fonts/Font(css,js)/css/icomoon.css" rel="stylesheet" />
    <link href="~/fonts/Font(css,js)/css/style.css" rel="stylesheet" />

</head>
<body>

    <!-- END nav -->

    <section class="home-slider owl-carousel">
        <div class="slider-item" style="background-image: url('../../image/dai-hoc-fpt-1.jpg');" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-md-10 col-sm-12 ftco-animate text-center">
                        <h1 class="mb-3">Thực đơn được mua nhiều nhất trong tuần</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="slider-item" style="background-image: url('../../image/dai-hoc-fpt-1.jpg');" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-md-10 col-sm-12 ftco-animate text-center">
                        <h1 class="mb-3">Các món mới</h1>
                    </div>
                </div>
            </div>
        </div>


    </section>

    <div class="ftco-section-reservation">
        <div class="container">
            <div class="row">
            </div>
        </div>
    </div>

    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-5">
                <div class="col-md-7 text-center heading-section ftco-animate">
                    <h2>Thực đơn</h2>
                    <div>
                        <br />
                        <div class="btn-group">
                            <button type="button" class="btn btn-lg btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Chọn ngày
                            </button>
                            @{
                                DateTime date = new DateTime();
                            }
                            <div class="dropdown-menu" id="date">
                                <a class="dropdown-item" href="@Url.Action("Home", new { date = date.ToString("02/31/2020") , service_time = 1 , id =1})">Thứ hai</a>
                                <a class="dropdown-item" href="@Url.Action("Home", new { date = date.ToString("09/01/2020") , service_time = 1 , id =1})">Thứ ba</a>
                                <a class="dropdown-item" href="@Url.Action("Home", new { date = date.ToString("09/02/2020") , service_time = 1 , id =1})">Thứ tư</a>
                                <a class="dropdown-item" href="@Url.Action("Home", new { date = date.ToString("09/03/2020") , service_time = 1 , id =1})">Thứ năm</a>
                                <a class="dropdown-item" href="@Url.Action("Home", new { date = date.ToString("09/04/2020") , service_time = 1 , id =1})">Thứ sáu</a>
                                <a class="dropdown-item" href="@Url.Action("Home", new { date = date.ToString("09/05/2020") , service_time = 1 , id =1})">Thứ bảy</a>
                                <a class="dropdown-item" href="@Url.Action("Home", new { date = date.ToString("09/06/2020") , service_time = 1 , id =1})">Chủ nhật</a>
                            </div>
                        </div>
                        <div class="btn-group" style="padding-left:40px;">
                            <button type="button" class="btn btn-lg btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Chọn bữa
                            </button>
                            
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("Home", new { date = DateTime.Now , service_time = 1 , id =1})">Bữa sáng</a>
                                <a class="dropdown-item" href="@Url.Action("Home", new { date = DateTime.Now , service_time = 2 , id =1})">Bữa trưa</a>
                                <a class="dropdown-item" href="@Url.Action("Home", new { date = DateTime.Now , service_time = 3 , id =1})">Bữa tối</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 dish-menu">

                    <div class="nav nav-pills justify-content-center ftco-animate" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link py-3 px-4 active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true"><span class="flaticon-meat"></span>Đồ Ăn</a>
                        <a class="nav-link py-3 px-4" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false"><span class="flaticon-cutlery"></span> Combo</a>
                        <a class="nav-link py-3 px-4" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false"><span class="flaticon-cheers"></span> Đồ Uống</a>
                    </div>



                    <div class="tab-content py-5" id="v-pills-tabContent">

                        <!-- Food -->

                        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">

                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    if (item.categoryID != 6 && item.isCombo == false)
                                    {
                                        <div class="col-lg-6">
                                            <div class="menus d-flex ftco-animate">
                                                <div class="menu-img" style="background-image: url(@Url.Content(item.img))"></div>
                                                <div class="text d-flex">
                                                    <div class="one-half">
                                                        <h3>@Html.DisplayFor(modelItem => item.name)</h3>
                                                        <p><span>@Html.DisplayFor(modelItem => item.description)</span></p>
                                                    </div>
                                                    <div class="one-forth">
                                                        <span class="price" style="width:100px;display:flex;padding-bottom:5px;">@Html.DisplayFor(modelItem => item.price) đ </span>
                                                        <button type="button" class="btn btn-outline-info waves-effect" title="thêm vào giỏ hàng" onclick="location.href='@Url.Action("Add", new { productID = item.id, date = DateTime.Now.Date, service_time = 1 })'">
                                                            Giỏ hàng
                                                            <i class="fa fa-cart-plus"></i>
                                                        </button>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    }
                                }

                            </div>
                        </div>




                        <!-- Food -->
                        <!-- COMBO -->

                        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    if (item.isCombo == true)
                                    {

                                        <div class="col-lg-6">
                                            <div class="menus d-flex ftco-animate">
                                                <div class="menu-img" style="background-image: url(@Url.Content(item.img))"></div>
                                                <div class="text d-flex">
                                                    <div class="one-half">
                                                        <h3>@Html.DisplayFor(modelItem => item.name)</h3>
                                                        <p><span>@Html.DisplayFor(modelItem => item.description)</span></p>
                                                    </div>
                                                    <div class="one-forth">
                                                        <span class="price" style="width:100px;display:flex;padding-bottom:5px;">@Html.DisplayFor(modelItem => item.price) đ </span>
                                                        <button type="button" class="btn btn-outline-info waves-effect" title="thêm vào giỏ hàng" onclick="location.href='@Url.Action("Add", new { productID = item.id, date = DateTime.Now.Date, service_time = 1 })'">
                                                            Giỏ hàng
                                                            <i class="fa fa-cart-plus"></i>
                                                        </button>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    }
                                }



                            </div>

                        </div>


                        <!-- COMBO -->

                        <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    if (item.categoryID == 6)
                                    {

                                        <div class="col-lg-6">
                                            <div class="menus d-flex ftco-animate">
                                                <div class="menu-img" style="background-image: url(@Url.Content(item.img))"></div>
                                                <div class="text d-flex">
                                                    <div class="one-half">
                                                        <h3>@Html.DisplayFor(modelItem => item.name)</h3>
                                                        <p><span>@Html.DisplayFor(modelItem => item.description)</span></p>
                                                    </div>
                                                    <div class="one-forth">
                                                        <span class="price" style="width:100px;display:flex;padding-bottom:5px;">@Html.DisplayFor(modelItem => item.price) đ </span>
                                                        <button type="button" class="btn btn-outline-info waves-effect" title="thêm vào giỏ hàng" onclick="location.href='@Url.Action("Add", new { productID = item.id, date = DateTime.Now.Date, service_time = 1 })'">
                                                            Giỏ hàng
                                                            <i class="fa fa-cart-plus"></i>
                                                        </button>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    }
                                }


                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- loader -->
</body>
</html>
