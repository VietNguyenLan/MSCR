
@{
    Layout = null;
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>DashBoard</h1>
        <h3>User Name : @Session["username"].ToString()</h3>
        <a href="@Url.Action("Index", "ChangePassword")">Change Password</a>
        <a href="@Url.Action("UserDetails","User",new { id = Session["id"]})">Update Information</a>
        <a href="@Url.Action("LogOut","Login")">Logout</a>
    </div>
</body>
</html>
