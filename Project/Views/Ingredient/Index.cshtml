@model PagedList.IPagedList<Project.EF.ingredient>
@using PagedList.Mvc;
<h4>Thành Phần</h4>
<button>
    @Html.ActionLink("Tạo Mới", "Create")
</button>
<link href="~/Style/Style.css" rel="stylesheet" />
<br><br>
<table class="table table-striped" id="t01">
    <tr>
        <th>
            Tên Thành Phần
        </th>
        <th>
            Mô Tả
        </th>
        <th>
            Đơn Vị
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unit)
            </td>
            <td>
                <button>@Html.ActionLink("Sửa", "Edit", new { id = item.id })</button>
                <button>@Html.ActionLink("Chi Tiết", "Details", new { id = item.id })</button>
                <button>@Html.ActionLink("Xóa", "Delete", new { id = item.id })</button>
            </td>
        </tr>
    }

</table>

<br />


    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
    / @Model.PageCount
    <br><br>

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
